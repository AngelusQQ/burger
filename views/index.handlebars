<BODY>
  <img id="titleImage" src="http://localhost:8080/title" height="200" width="256">
  <H1>Please Enter Your Custom Order!</H1>
  <FORM action="/submit-order" method="post">
    <INPUT type="text" name="order"> <br>
    <button type="submit"><img id="submit" src="http://localhost:8080/submit-image"></button>
  </FORM>

  <div id="container">
  </div>
</BODY>
