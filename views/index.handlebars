<!DOCTYPE HTML>
<HEAD>
  <TITLE>Order your Burger</TITLE>
  <META name="viewport" content="width=device-width, initial-scale=1.0">
</HEAD>
<STYLE>

  BODY {
    width:80%;
  }

  #titleImage {
    margin-left:40vw;
  }

  h1 {
    text-align:center;
    margin-left:25%;
  }

  FORM {
    margin-left:41vw;
  }

  INPUT {
    width:216px;
    margin-bottom:20px;
  }

  BUTTON {
    width:220px;
    height:75px;
  }

  #submit {
    width:200px;
    height:50px;
  }

  #container {
    margin-top:100px;
    margin-left:10vw;
    width:100%;
    height:600px;
    border-style:solid;
    border-width:3px;
  }

  .burgers {
    width:33%;
  }

